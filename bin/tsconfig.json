{
    "compilerOptions": {
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "allowJs": true,
        "declaration": true,
        "outDir": "./bin",
        "sourceMap": true,
        "strictPropertyInitialization": false,
        "types": ["node"],
        // "baseUrl": ".",
        "target": "es6",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}
